<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/orangeAction" />
            <gradient android:startColor="@color/orangeAction" android:endColor="@color/blueVerite" android:angle="1"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle" >
            <solid android:color="@color/btnDisabled" />
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle" >
            <solid android:color="@color/orangeAction" />
            <gradient android:startColor="@color/orangeAction" android:endColor="@color/blueVerite" android:angle="90"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

</selector>